// دالة حساب العامل بطريقة عودية
عدد_صحيح عامل(عدد_صحيح ن) {
    إذا (ن <= ١) {
        إرجع ١.
    }
    إرجع ن * عامل(ن - ١).
}

عدد_صحيح رئيسية() {
    عدد_صحيح الرقم = ٥.
    عدد_صحيح النتيجة = عامل(الرقم).
    
    اطبع("عامل ").
    اطبع_عدد(الرقم).
    اطبع(" = ").
    اطبع_عدد(النتيجة).
    
    إرجع ٠.
}
